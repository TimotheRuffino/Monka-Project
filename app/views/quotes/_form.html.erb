<%= form_with(model: @quote, local: true, method: :put) do |form| %>

<div class="form-group form-row">
  <%= form.check_box :is_invoice, class: "form-control ml-3", value: true, :style => "width: 20px; height: 20px;" %>
  <%= form.label :is_invoice, "Cocher pour transformer en facture", class: "ml-2" %>
</div>

  <div class="row justify-content-center">
    <%= submit_tag "Valider", {class: 'btn btn-primary'} %>
  </div>
<%end %>